  sample bells, amp: 4, sustain: 6
  sleep 2.2
end

use_bpm 113
use_synth :chiplead

live_loop :si do #48 beats
  2.times do
    with_fx :reverb do
      #Treble Clef#
      #Measure 1#
      treb :Fs5, :Cs6, :Gs5, :Cs5, :Es5, :A5, :Cs6, :B4, :B5, :D5, :E5, :G4, :A4
      a1 = a1 - 0.5
    end
  end
  stop
end
live_loop :pee do
  2.times do
    with_fx :reverb do
      #bass
      baSS
      a2 = a2 - 0.125
    end
  end
  stop
end
sleep 45.5

6.times do
  sample :bd_klub
  sleep s
  s = s - 0.25
end
sleep 0.5

