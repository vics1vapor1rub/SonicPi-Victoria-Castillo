# Elfen Lied Lilium Song 2
# sample
bells = "C:/Users/victoria_castillo/Downloads/liliumbells(2).wav"
vocals = "C:/Users/victoria_castillo/Downloads/lilium_vocals.wav"

# variable
s = 0.9
a1 = 1
a2 = 0.25

#defining functions#
define :treb do |n , i , k , o, s , w, a ,p, e, y, z, r, m|
  #Treble Clef#
  #Measure 1#
  play n, sustain: 1, amp: a1
  sleep 1
  play i, sustain: 1, amp: a1
  sleep 1
  #Measure 2#
  play k, sustain: 1.5, amp: a1
  play o, sustain: 1.5, amp: a1
  play s, sustain: 1.5, amp: a1
  sleep 3
  play w, sustain: 0.5, amp: a1
  sleep 1
  play w, sustain: 1, amp: a1
  play n, sustain: 1, amp: a1
  play o, sustain: 1, amp: a1
  sleep 2
  play n, sustain: 1, amp: a1
  sleep 1
  play a, sustain: 1, amp: a1
  sleep 1
  #Measure 3
  play k, sustain: 1.5, amp: a1
  play o, sustain: 1.5, amp: a1
  play s, sustain: 1.5, amp: a1
  sleep 3#2
  play w, sustain: 0.5, amp: a1
  sleep 1
  play e, sustain: 1, amp: a1
  sleep 1
  play w, sustain: 1, amp: a1
  sleep 1
  #Measure 4
  play n, sustain: 2, amp: a1
  play y, sustain: 2, amp: a1
  play m, sustain: 2, amp: a1
  sleep 4
  play n, sustain: 1, amp: a1
  play y, sustain: 1, amp: a1
  play m, sustain: 1, amp: a1
  sleep 1
  play k, sustain: 1, amp: a1
  play p, sustain: 1, amp: a1
  sleep 1
  play z, sustain: 1, amp: a1
  play p, sustain: 1, amp: a1
  sleep 1
  play y, sustain: 1, amp: a1
  play p, sustain: 1, amp: a1
  sleep 1
  #Measure 5
  play z, sustain: 2, amp: a1
  play p, sustain: 2, amp: a1
  play r, sustain: 2, amp: a1
  sleep 4
  play z, sustain: 1, amp: a1
  play p, sustain: 1, amp: a1
  play r, sustain: 1, amp: a1
  sleep 1
  play n, sustain: 1, amp: a1
  play m, sustain: 1, amp: a1
  sleep 1
  play y, sustain: 1, amp: a1
  play m, sustain: 1, amp: a1
  sleep 1
  play o, sustain: 1, amp: a1
  play m, sustain: 1, amp: a1
  sleep 1
  #Measure 6
  play p, sustain: 1, amp: a1
  play y, sustain: 1, amp: a1
  sleep 1
  play z, sustain: 1, amp: a1
  play p, sustain: 1, amp: a1
  sleep 1
  play n, sustain: 1, amp: a1
  play p, sustain: 1, amp: a1
  sleep 2#1
  play n, sustain: 1, amp: a1
  play p, sustain: 1, amp: a1
  sleep 1
  play k, sustain: 1, amp: a1
  sleep 1
  play w, sustain: 1, amp: a1
  sleep 1
  play e, sustain: 1, amp: a1
  sleep 1
  #Measure 7
  play w, sustain: 2, amp: a1
  sleep 4 #5
  play k, sustain: 1.5, amp: a1
  play s, sustain: 1.5, amp: a1
  sleep 2 #3
  sleep 2
end

define :baSS do
  #Measure 1
  sleep 2
  #Measure 2
  play :Es3, sustain: 1, amp: a2
  sleep 1
  play :C4, sustain: 1, amp: a2
  sleep 1
  play :G4, sustain: 1, amp: a2
